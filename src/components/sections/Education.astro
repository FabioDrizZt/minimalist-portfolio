---
import Section from "../Section.astro"
import { education } from "@cv"
---

<Section title="Education">
    <ul class="flex flex-col gap-8">
        {
          education.map(({ institution, startDate, endDate, area }) => {
            const startYear = new Date(startDate).getFullYear()
            const endYear =
              endDate != null ? new Date(endDate).getFullYear() : "Actual"
            const years = `${startYear} - ${endYear}`
    
            return (
              <li>
                <article>
                  <header class="flex justify-between items-start mb-1">
                  <div>
                      <h3 class="font-medium text-gray-900">{institution}</h3>
                    </div>
                    <time class="text-gray-600 text-sm min-w-[102px]">{years}</time>
                  </header>
    
                  <footer>
                    <p class="text-gray-600">{area}</p>
                  </footer>
                </article>
              </li>
            )
          })
        }
      </ul>
</Section>
