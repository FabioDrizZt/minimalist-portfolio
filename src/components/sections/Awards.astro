---
import Section from "../Section.astro"
import { awards } from "@cv"
---

<Section title="Awards">
  <ul class="flex flex-col gap-8">
    {
      awards.map(({ title, date, awarder, summary }) => {
        const awardDate = new Date(date).getFullYear()

        return (
          <li>
            <article>
              <header class="flex justify-between items-start mb-1">
                <div>
                  <h3 class="font-medium text-gray-900">{title}</h3>
                  <p class="text-gray-600 text-sm">{awarder}</p>
                </div>
                <time class="text-gray-600 text-sm min-w-[102px]">{awardDate}</time>
              </header>

              <footer>
                <p class="text-gray-600">{summary}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>
